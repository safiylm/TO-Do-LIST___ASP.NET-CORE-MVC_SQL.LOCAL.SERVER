@model TODOLIST_ASP.NET_CORE_MVC.Models.TodolistModel




        <form asp-action="Create" id="form-create-item-for-todolist">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="item" class="form-control" id="input-create-item" placeholder="Créer une nouvelle tâche" required autofocus />
                <span asp-validation-for="item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
  


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
        #form-create-item-for-todolist{
            display: flex;
            flex-direction: row; 
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
            margin: 50px 0;
        }

        #form-create-item-for-todolist #input-create-item {
            width: 500px;
        }
</style>